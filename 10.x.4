#include <iostream>

void printArrayInStyleC(char &testString);

int main()
{
    char testString[]{"Hello, world!"};

printArrayInStyleC(*testString);
    
    return 0;
    
}

void printArrayInStyleC(char &testString)
{
        while(true)
    {
        static int index { 0 };
        
        std::cout << (&testString+index);
        
        if((&testString+index) == 0)
        break;
        
        ++index;
    }
}
